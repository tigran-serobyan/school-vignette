{% extends 'classroomLayout.twig' %}

{% block body %}
	<div class="studentLongInfo">
		<div class="studentInfo">
			<img src='{{HOME_URL}}{{student.image|split('/',2)[1]}}'>
			<div class="studentNameAndQuote">
				<h3>{{student.name}}</h3>
				<i>{{student.quote}}</i>
			</div>
		</div>
		{{student.body}}
	</div>
{% endblock %}
